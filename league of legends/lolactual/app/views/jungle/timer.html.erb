	    <%= stylesheet_link_tag    "jungle", media: "all", "data-turbolinks-track" => true %>
	    <script>
			var intervals = new Array();
			
			function countdown(element, minutes, seconds, title, color, sound) {
				var el = document.getElementById(element);
				var audio = document.getElementById('audiodiv');
				
				clearInterval(intervals[element]);
				minutes = minutes+"";
				if(minutes.length < 2) {
					minutes = "0" + minutes;
				}
				
				seconds = seconds+"";
				if(seconds.length < 2) {
					seconds = "0" + seconds;
				}
				
				el.innerHTML = '<center><span class="' + color + '">' + title + '</span><br />' + minutes + ':' + seconds + '</center>';
				seconds--;
				
				intervals[element] = setInterval(function() {
					var el = document.getElementById(element);
					if(seconds == 0) {
						if(minutes == 0) {
							el.innerHTML = "0!!!!";
							clearInterval(intervals[element]);
						} else {
							minutes--;
							seconds = 60;
						}
					}
					
					minutes = minutes+"";
					if(minutes.length < 2) {
						minutes = "0" + minutes;
					}
					
					seconds = seconds+"";
					if(seconds.length < 2) {
						seconds = "0" + seconds;
					}
					
					if(minutes == 0 && seconds == 30) {
						audio.innerHTML = '<audio src="http://ertu.de/jungle/sounds/' + sound + '.wav" type="audio/wav" autoplay></audio>';
						el.innerHTML = '<center><span class="' + color + '">' + title + '</span><br />' + minutes + ':' + seconds + '</center>';
					}
					el.innerHTML = '<center><span class="' + color + '">' + title + '</span><br />' + minutes + ':' + seconds + '</center>';
					
					
					seconds--;
				}, 1000);
			}
		</script>
	</head>
	<body>
		<div id="ownBlue" class="timer" onclick="countdown('ownBlue',4,59,'OWN BLUE','blue','ob')">
			<center>
				<span class="blue">OWN BLUE</span><br />
				00:00
			</center>
		</div>
		<div id="ownRed" class="timer" onclick="countdown('ownRed',4,59,'OWN RED','red','or')" >
