<%= render 'layouts/header' %>
<input id="searchInput2" value="Filteren">
<table data-role="table" id="table-custom-2" data-mode="column" class="ui-body-d ui-shadow table-stripe ui-responsive" data-column-popup-theme="a">
	<thead>
		<tr class="ui-bar-d">
			<th>Vaknaam</th>
			<th>Periode</th>
			<th>ECTS</th>
			<th>&nbsp;</th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	<tbody id="fbody">
		<% @saved.each do |item| %>
			<tr onmouseover="this.bgColor='#C9FBFF'" onmouseout="this.bgColor=''">
				<td class="clickableRow" href="/course/information/<%= item.vakID %>"><%= item.vaknaam %></td>
				<td class="clickableRow" href="/course/information/<%= item.vakID %>"><%= item.periode %></td>
				<td class="clickableRow" href="/course/information/<%= item.vakID %>"><%= item.ects %></td>
				<td width="10px"><a href="/favorite/add/<%= item.vakID %>"><img src="/assets/images/favorite.png" width="30px" /></td>
				<td width="10px"><a href="/saved/delete/<%= item.vakID %>"><img src="/assets/images/delete.png" width="30px" /></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= render 'layouts/footer'%>