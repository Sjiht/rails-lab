<h1>Editing task</h1>
 
<%= form_for :task, url: @task, method: :patch do |f| %>
  <% if @task.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@task.errors.count, "error") %> prohibited
      this post from being saved:</h2>
    <ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.label :taskName %><br>
    <%= f.text_field :taskName, :size => 40 %>
  </p>
  
  <p>
    <%= f.label :taskContent %><br>
    <%= f.text_area :taskContent, :cols => 70, :rows => 10 %>
  </p>
 
  <p>
  	<%= label_tag(:taskCompleted, "Task completed") %>
    <%= check_box("task", "taskCompleted") %>
  </p>
 
  <p>
    <%= f.label 'Deadline' %><br>
    <%= date_select("task", "taskDate", :order => [:day, :month, :year]) %>
  </p>
  
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', task_directories_path %>